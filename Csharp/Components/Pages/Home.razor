@page "/"
@inject NavigationManager NavigationManager




<div class="home-container">
    <h3>SAIT Library System</h3>
    <img src="thumbnailimages/library.png" class="library-image" alt="Library Image" />
    <p class="welcome-message">
        Welcome to our library app—your personalized portal to a world of books and resources. 
        Easily browse, search, and reserve titles, with real-time updates and tailored recommendations. 
        For librarians, the app simplifies catalog management, lending, and inventory. 
        Experience the future of reading with convenience at your fingertips!
    </p>
    <h4>Get Started</h4>
    <p class="user-admin-text">Please select your role to proceed:</p>
    <div class="user-admin-buttons">
        <button class="btn btn-primary" @onclick="NavigateToUser">User</button>
        <button class="btn btn-secondary" @onclick="NavigateToAdmin">Admin</button>
    </div>
</div>

@code {
    /*Name: NavigateToUser
    Description: This function navigates the user to the user page when called.*/
    private void NavigateToUser()
    {
        NavigationManager.NavigateTo("/counter");
    }
    /*Name: NavigateToAdmin
    Description: This function navigates the user to the admin page when called.*/
    private void NavigateToAdmin()
    {
        NavigationManager.NavigateTo("/admin");
    }
}

